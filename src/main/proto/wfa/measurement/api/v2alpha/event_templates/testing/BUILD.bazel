load("@rules_proto//proto:defs.bzl", "proto_library")
load("@rules_java//java:defs.bzl", "java_proto_library")
load("@wfa_common_jvm//build/kt_jvm_proto:defs.bzl", "kt_jvm_proto_library")

package(
    default_testonly = True,
    default_visibility = ["//visibility:public"],
)

IMPORT_PREFIX = "/src/main/proto"

proto_library(
    name = "person_proto",
    srcs = ["person.proto"],
    strip_import_prefix = IMPORT_PREFIX,
    deps = ["@wfa_measurement_proto//src/main/proto/wfa/measurement/api/v2alpha:event_annotations_proto"],
)

proto_library(
    name = "banner_proto",
    srcs = ["banner_ad.proto"],
    strip_import_prefix = IMPORT_PREFIX,
    deps = ["@wfa_measurement_proto//src/main/proto/wfa/measurement/api/v2alpha:event_annotations_proto"],
)

proto_library(
    name = "video_proto",
    srcs = ["video.proto"],
    strip_import_prefix = IMPORT_PREFIX,
    deps = [
        "@com_google_protobuf//:duration_proto",
        "@wfa_measurement_proto//src/main/proto/wfa/measurement/api/v2alpha:event_annotations_proto",
    ],
)

proto_library(
    name = "test_event_proto",
    srcs = ["test_event.proto"],
    strip_import_prefix = IMPORT_PREFIX,
    deps = [
        ":banner_proto",
        ":person_proto",
        ":video_proto",
        "@uk_pilot_event_templates//src/main/proto/halo_cmm/uk/pilot:common_template_proto",
        "@uk_pilot_event_templates//src/main/proto/halo_cmm/uk/pilot:video_template_proto",
    ],
)

java_proto_library(
    name = "test_event_java_proto",
    deps = [":test_event_proto"],
)

kt_jvm_proto_library(
    name = "test_event_kt_jvm_proto",
    srcs = [":test_event_proto"],
    deps = [":test_event_java_proto"],
)

proto_library(
    name = "bad_templates_proto",
    srcs = ["bad_templates.proto"],
    deps = ["@wfa_measurement_proto//src/main/proto/wfa/measurement/api/v2alpha:event_annotations_proto"],
)

java_proto_library(
    name = "bad_templates_java_proto",
    deps = [":bad_templates_proto"],
)

kt_jvm_proto_library(
    name = "bad_templates_kt_jvm_proto",
    srcs = [":bad_templates_proto"],
    deps = [":bad_templates_java_proto"],
)

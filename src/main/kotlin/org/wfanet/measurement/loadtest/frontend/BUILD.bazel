        "@wfa_consent_signaling_client//src/main/kotlin/org/wfanet/measurement/consent/crypto/hybridencryption/testing",
        "@wfa_consent_signaling_client//src/main/kotlin/org/wfanet/measurement/consent/crypto/keystore",
    ],
)

kt_jvm_library(
    name = "frontend_simulator_runner",
    srcs = [
        "FrontendSimulatorFlags.kt",
        "FrontendSimulatorRunner.kt",
    ],
    deps = [
        ":frontend_simulator",
        "//src/main/kotlin/org/wfanet/measurement/kingdom/deploy/common:flags",

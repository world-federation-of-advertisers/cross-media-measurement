        "@wfa_common_jvm//src/main/kotlin/org/wfanet/measurement/storage/filesystem:client",
    ],
)

java_binary(
    name = "FakeDataProviderServer",
    main_class = "org.wfanet.measurement.loadtest.dataprovider.FileSystemEdpSimulatorRunner",
    runtime_deps = [":edp_simulator"],
)

java_image(
    name = "file_system_edp_simulator_image",
    main_class = "org.wfanet.measurement.loadtest.dataprovider.FileSystemEdpSimulatorRunner",
    visibility = ["//src:docker_image_deployment"],
    runtime_deps = [":edp_simulator"],
)

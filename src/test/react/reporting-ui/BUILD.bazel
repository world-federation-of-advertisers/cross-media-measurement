load("@aspect_rules_js//js:defs.bzl", "js_library")
load("@aspect_rules_jest//jest:defs.bzl", "jest_test")

# Filename conventions described at
# https://create-react-app.dev/docs/running-tests#filename-conventions
TEST_PATTERNS = [
    "*.test.tsx",
    "*.test.ts",
    "*.spec.tsx",
    "*.spec.ts",
    "**/*.js",
]

js_library(
    name = "test_node_deps",
    srcs = [
        "//:node_modules/@babel/preset-env",
        "//:node_modules/@babel/preset-react",
        "//:node_modules/@babel/preset-typescript",
        "//:node_modules/@testing-library/jest-dom",
        "//:node_modules/@testing-library/react",
        "//:node_modules/@testing-library/user-event",
        "//:node_modules/jest",
        "//:node_modules/identity-obj-proxy",
        "//:node_modules/jest-transform-css",
        "//:node_modules/ts-jest",
    ]
)

js_library(
    name = "test_files",
    srcs = glob(
        include = TEST_PATTERNS,
    ),
)

js_library(
    name = "jest_config",
    srcs = ["jest.config.js"],
)

js_library(
    name = "babel_config",
    srcs = ["babel.config.js"],
)

jest_test(
    name = "test",
    config = ":jest_config",
    data = [
        "//src/main/react/reporting-ui:build_node_deps",
        "//src/main/react/reporting-ui/src:src_files",
        "//src/test/react/jest:jest_files",
        "//src/test/react/jest:jest_base_config",
        ":test_files",
        ":test_node_deps",
    ],
    node_modules = "//:node_modules",
)

[*.{kt,kts}]
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = true
insert_final_newline = true
kotlin_imports_layout=*
# Comma-separated list of rules to disable.
# indent, import-ordering, and parameter-list-wrapping rules disabled to avoid conflicts with ktfmt.
disabled_rules=indent,import-ordering,parameter-list-wrapping
